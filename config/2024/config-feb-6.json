{
  "$schema": "../schema.json",
  "title": "QRScout",
  "page_title": "4020 Scouting",
  "sections": [
    {
      "name": "Prematch",
      "preserveDataOnReset": false,
      "fields": [
        {
          "title": "Scouter_Initials",
          "type": "text",
          "required": true,
          "rows": 1,
          "code": "scouter"
        },
        {
          "title": "Match_Number",
          "type": "text",
          "required": true,
          "rows": 1,
          "code": "match"
        },
        {
          "title": "Alliance_ID",
          "type": "select",
          "required": true,
          "code": "allianceId",
          "choices": {
            "r1": "Red 1",
            "r2": "Red 2",
            "r3": "Red 3",
            "b1": "Blue 1",
            "b2": "Blue 2",
            "b3": "Blue 3"
          },
          "defaultValue": "r1"
        },
        {
          "title": "Team_Number",
          "type": "text",
          "required": true,
          "rows": 1,
          "code": "teamNumber"
        },
        {
          "title": "Starting_Location",
          "type": "select",
          "choices": {
            "barrier": "Amp",
            "middle": "Speaker",
            "opposite": "Source",
            "noshow": "No Show"
          },
          "defaultValue": "No Show",
          "required": false,
          "code": "autoStart"
        }
      ]
    },
    {
      "name": "Auto",
      "fields": [
        {
          "code": "lz",
          "title": "Leave_Zone",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "as",
          "title": "Auto_Speaker",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-green-600",
          "required": false
        },
        {
          "code": "asm",
          "title": "Auto_Speaker_Miss",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-yellow-600",
          "required": false
        },
        {
          "code": "aa",
          "title": "Auto_Amp",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-green-400",
          "required": false
        },
        {
          "code": "aam",
          "title": "Auto_Amp_Miss",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-yellow-400",
          "required": false
        },
        {
          "code": "ac1",
          "title": "Auto_Center_Amp",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ac2",
          "title": "Auto_Center_Spkr",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ac3",
          "title": "Auto_Center_Mid",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ac4",
          "title": "Auto_Center_Mid_Source",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ac5",
          "title": "Auto_Center_Source",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        }
      ]
    },
    {
      "name": "Teleop Notes",
      "fields": [
        {
          "code": "ts",
          "title": "Teleop_Speaker",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-green-600",
          "required": false
        },
        {
          "code": "tsm",
          "title": "Teleop_Speaker_Miss",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-yellow-600",
          "required": false
        },
        {
          "code": "ta",
          "title": "Teleop_Amp",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-green-400",
          "required": false
        },
        {
          "code": "tam",
          "title": "Teleop_Amp_Miss",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "bgcolor": "bg-yellow-400",
          "required": false
        },
        {
          "code": "coop",
          "title": "Coopertition",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ni",
          "title": "Note_Intake",
          "type": "select",
          "choices": {
            "None" : "None",
            "Floor": "Floor",
            "Source": "Source",
            "Both": "Both"
          },
          "defaultValue": "None",
          "required": false
        }
      ]
    },
    {
      "name": "Teleop Stage",
      "fields": [
        {
          "code": "tep",
          "title": "End_Position",
          "type": "select",
          "choices": {
            "NoScore" : "Not Scoring",
            "Parked": "Parked",
            "Climbed": "Onstage",
            "Harmony": "Spotlight"
          },
          "defaultValue": "NoScore",
          "required": false
        },
        {
          "code": "tt",
          "title": "Trap_Score",
          "type": "counter",
          "defaultValue": 0,
          "min": 0,
          "required": false
        },
        {
          "code": "th",
          "title": "Harmony",
          "type": "select",
          "choices": {
            "None" : "None",
            "First": "First on chain",
            "Second": "Second on chain",
            "Third": "Third on chain"
          },
          "defaultValue": "None",
          "required": false
        }
      ]
    },
    {
      "name": "Defense/Fouls",
      "fields": [
        {
          "code": "da",
          "title": "Defense_Amount",
          "type": "select",
          "choices": {
            "little": "None or very little",
            "moderate": "Moderate amount",
            "most": "Most of the time"
          },
          "defaultValue": "little",
          "required": false
        },
        {
          "code": "de",
          "title": "Defense_Effectiveness",
          "type": "select",
          "choices": {
            "no": "No defense played",
            "poor": "Poor",
            "ok": "OK",
            "great": "Excellent"
          },
          "defaultValue": "no",
          "required": false
        },
        {
          "code": "foul",
          "title": "Fouls",
          "type": "select",
          "choices": {
            "na": "Forgot to notice",
            "clean": "None noticed - clean",
            "1or2": "1 or 2 regular fouls",
            "multiple": "Tech foul or multiple regular",
            "a_lot": "Fouling machine!"
          },
          "defaultValue": "na",
          "required": false
        }
      ]
    },
    {
      "name": "Evaluation",
      "fields": [
        
        
        {
          "code": "ds",
          "title": "Driver_Skill",
          "type": "select",
          "choices": {
            "na" : "Not Noticed",
            "hindrance": "Hindrance",
            "poor": "Poor",
            "fair": "Fair",
            "good": "Mostly good",
            "great": "Very good" 
          },
          "defaultValue": "na",
          "required": false
        },
        {
          "code": "d",
          "title": "Died",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "to",
          "title": "Tipped_Over",
          "type": "boolean",
          "defaultValue": false,
          "required": false
        },
        {
          "code": "ssr",
          "title": "Speaker_Shooting_Range",
          "type": "select",
          "choices": {
						"na": "No Shots",
            "Sub": "Close (Subwoofer)",
            "Wing": "Medium (Stage Area)",
            "Mid": "Far (Mid-Field)"
          },
          "defaultValue": "na",
          "required": false
        },
        {
          "code": "co",
          "title": "Comments",
          "type": "text",
          "required": false,
          "rows": 3,
          "placeholder": "What was noteworthy or unusual about this performance? (NO EMOJI)"
        }
      ]
    }
  ]
}
